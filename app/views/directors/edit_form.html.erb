<form action="http://localhost:3000/update_director/<%=@director.id %>">
  <div>
    <label for="director_name">Director Name:</label>
    <input id="director_name" type="text" name="name" value="<%=@director.name %>">
  </div>
  <div>
    <label for="bio">Bio:</label>
    <input id="bio" type="text" name="bio" value="<%=@director.bio %>">
  </div>
  <div>
    <label for="dob">Date of Birth:</label>
    <input id="dob" type="text" name="dob" value="<%=@director.dob %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="image_url" value="<%=@director.image_url %>">
  </div>
  <div>
    <button>Update Director</button>
  </div>
</form>
