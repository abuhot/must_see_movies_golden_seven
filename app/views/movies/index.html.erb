<h1>List of Movies</h1>

<a href="http://localhost:3000/movie/new">Add a New Movie</a>

<table>
  <tr>
    <th></th>
    <th>Movie Title</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= movie.id %>">full bio</a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= movie.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movies/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
